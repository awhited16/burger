<div class="container">
    <div class="jumbotron text-center">
        <h1>Burger App</h1>
        <img src="../public/assets/img/burger_img.jfif" alt="burger">
        <p>Manage burgers with this app</p>
    </div>
    <div class="row">
        <div class="col-md-7">
            {{!-- List of burgers --}}
            <ol>
                {{#each burgers}}
                    {{#unless this.devoured}}
                    <li>
                        <p>
                            {{this.burger_name}}
                        </p>
                        <form action="burgers/updateOne/{{this.id}}?_method=PUT" method="POST">
                            <input type="hidden" name="devoured" value="true">
                            <button class="devouredBtn" type="submit">Devour it!</button>
                        </form>
                    </li>
                    {{/unless}}
                {{/each}}
            </ol>
        </div>
        <div class="col-md-5">
            {{!-- devoured burgers --}}
            <ol>
                {{#each burgers}}
                    {{#if this.devoured}}
                    <li>
                        <p>
                            {{this.burger_name}}
                        </p>
                    </li>
                    {{/if}}
                {{/each}}
            </ol>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12 text-center">
            <form method="POST" action="burgers/insertOne" class="newBurger text-center">
                <textarea id="textArea" type="text" name="burger_name" class="newBurgerName"></textarea>
                <button class="createBtn" type="submit" >Submit</button>
            <p>Enter a burger you want to eat, then click the Submit button to add it to the list.</p>
        </div>
    </div>
</div>